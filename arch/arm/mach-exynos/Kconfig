	bool
	depends on ARCH_EXYNOS5
	select S5P_DEV_BTS
	help
	  Compile in platform device definitions for BTS devices

config EXYNOS4_BTS
	bool "Bus traffic shaper support"
	default y
	depends on (SOC_EXYNOS4270 || SOC_EXYNOS3470)
	help
	  Enable BTS (Bus traffic shaper) support

